{
  "manifest_version": 2,
  "name": "Instagram PC Lite",
  "short_name": "Instagram PC Lite",
  "description": "Instagram PC Lite",
  "version": "1.0.0",
  "author": "matico",
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "tabs",
    "webNavigation",
    "*://*.instagram.com/*"
  ],
  "background": {
    "scripts": [
        "js/background.js"
    ],
    "persistent": true
  },
  "browser_action":{
    "default_icon": "icon/enable.png"
  }
}